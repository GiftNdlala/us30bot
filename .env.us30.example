# US30 Bot Environment Variables
# Copy this file to .env.us30 and fill in your values
# DO NOT commit .env.us30 to git (it contains sensitive credentials)

# Bot Configuration
CONFIG_PATH=./config_us30.json
US30_SYMBOL=US30m
DB_PATH=./data/us30_trades.sqlite
BOT_NAME=US30_BOT
LOG_PREFIX=[US30]

# MT5 Credentials (alternatively set these in config_us30.json)
MT5_LOGIN=
MT5_PASSWORD=
MT5_SERVER=Exness-MT5Trial9

# Web Dashboard
FLASK_PORT=5001
FLASK_HOST=0.0.0.0
FLASK_DEBUG=False

# Telegram Alerts (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email Alerts (Optional)
SMTP_SERVER=
SMTP_PORT=587
EMAIL_FROM=
EMAIL_TO=
EMAIL_PASSWORD=

# Trading Mode
# Set to 'false' to enable live trading (USE WITH CAUTION!)
DEMO_ONLY=true
EXECUTION_ENABLED=false

# Risk Management Overrides (Optional)
# Uncomment to override config_us30.json settings
# RISK_PERCENT_PER_TRADE=0.5
# MAX_CONCURRENT_TRADES=5
# DAILY_LOSS_LIMIT_PCT=5.0
